<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="200" height="20" >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.chaostomorrow.taproom.views.events.FormulaSearchEvent;
			
			import spark.events.TextOperationEvent;
			
			protected function inputKeyDownHandler(event:KeyboardEvent):void {
				if(event.keyCode == Keyboard.ENTER){
					search();
				}
			}

			protected function search():void {
				dispatchEvent(new FormulaSearchEvent(input.text));
			}

		]]>
	</fx:Script>
	<s:TextInput id="input" width="100%" height="100%" keyDown="inputKeyDownHandler(event)"/>
</s:Group>
